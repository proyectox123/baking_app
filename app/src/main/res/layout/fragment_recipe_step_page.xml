<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.mho.bakingapp.features.recipesteppage.RecipeStepPageViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.recipesteppage.RecipeStepPageFragment">

        <TextView
            style="@style/DescriptionRecipeStepStyle"
            android:id="@+id/recipeStepDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{viewModel.recipeStepDescription}"
            tools:text="@tools:sample/lorem/random"
            tools:maxLines="3"/>

    </android.support.constraint.ConstraintLayout>
</layout>